{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Public API",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/publicapi",
            "args": [
                "--config=config/publicapi.yaml"
            ],
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Launch Admin API",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/adminapi",
            "args": [
                "--config=config/adminapi.yaml"
            ],
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Launch Auth API",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/authapi",
            "args": [
                "--config=config/authapi.yaml"
            ],
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Launch Bot",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/bot",
            "args": [
                "--config=config/bot.yaml"
            ],
            "cwd": "${workspaceFolder}"
        }
    ]
}